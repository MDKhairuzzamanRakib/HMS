@model Master_Details.Models.Department
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/layout.cshtml";
}

<h1 class="text-center">Create Department</h1>

@using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msg", OnComplete = "clearAll" }))
{

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(x=>x.DepartmentId)
    <div class="row mb-3">
        @Html.LabelFor(x => x.DepartmentName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.DepartmentName, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.ValidationMessageFor(x => x.DepartmentName, "", new { @class = "text-denger" })
        </div>
    </div>
    <div class="row mb-3">
        @Html.LabelFor(x => x.DoctorName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(x => x.DoctorName, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.ValidationMessageFor(x => x.DoctorName, "", new { @class = "text-denger" })
        </div>
    </div>

    <div class="row mb-2">
        <div id="msg">

        </div>
    </div>

    <div class="offset-2 col-md-10">
        <input type="submit" value="Update" class="btn btn-primary btn-sm mb-3" />
    </div>

    <div class="offset-2 col-md-10">
        @Html.ActionLink("Back to List", "Index", "Department", new { }, new { @class = "btn btn-secondary btn-sm" })
    </div>
}

@section scripts
{
    <script>
        function clearAll() {
            $("#form0").trigger("reset");
        }
    </script>
}
